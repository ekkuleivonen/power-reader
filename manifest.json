{
  "name": "Power Reader",
  "description": "Read web content 2x faster.",
  "version": "1.0",
  "icons": {
    "16": "images/logo-16.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },

  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "images/logo-16.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  },

  "background": {
    "service_worker": "dist/background.js"
  },

  "permissions": ["activeTab", "tabs", "scripting", "webNavigation", "storage"],
  "host_permissions": ["<all_urls>"],

  "commands": {
    "highlights": {
      "suggested_key": "Ctrl+Shift+S",
      "description": "Toggles the highlights plugin"
    },
    "reader_mode": {
      "suggested_key": "Ctrl+Shift+E",
      "description": "Toggles the reader-mode plugin"
    }
  },

  "manifest_version": 3
}
